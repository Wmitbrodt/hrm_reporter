<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if current_page.last? %>
  <span class="relative inline-flex items-center rounded-r-md px-3 py-2 text-sm font-semibold text-gray-300 ring-1 ring-inset ring-gray-300 bg-gray-50 cursor-not-allowed">
    Next
  </span>
<% else %>
  <%= link_to "Next", url, rel: "next", remote: remote,
    class: "relative inline-flex items-center rounded-r-md px-3 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20" %>
<% end %>
