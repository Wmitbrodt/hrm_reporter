<div class="max-w-7xl mx-auto space-y-6">
  <div class="border-b border-gray-200 pb-4">
    <h1 class="text-2xl font-semibold text-gray-900">
      Session #<%= @session.external_id %>
    </h1>
    <p class="mt-1 text-sm text-gray-500">
      <%= @session.user.username %> Â· <%= l(@session.imported_created_at, format: :short) %>
    </p>
  </div>

  <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
    <div class="rounded-lg border border-gray-200 bg-white p-6">
      <div class="text-sm text-gray-500">User</div>
      <div class="mt-2 text-lg font-semibold text-gray-900"><%= @session.user.username %></div>
    </div>

    <div class="rounded-lg border border-gray-200 bg-white p-6">
      <div class="text-sm text-gray-500">Created</div>
      <div class="mt-2 text-lg font-semibold text-gray-900">
        <%= l(@session.imported_created_at, format: :short) %>
      </div>
    </div>

    <div class="rounded-lg border border-gray-200 bg-white p-6">
      <div class="text-sm text-gray-500">Min / Avg / Max BPM</div>
      <div class="mt-2 text-lg font-semibold text-gray-900">
        <%= @session.min_bpm %> / <%= number_with_precision(@session.avg_bpm, precision: 2) %> / <%= @session.max_bpm %>
      </div>
    </div>
  </div>

  <div class="rounded-lg border border-gray-200 bg-white p-6">
    <h2 class="text-lg font-medium text-gray-900">Heart Rate Over Time</h2>
    <div class="mt-4">
      <%= line_chart @session.chart_points, height: "320px" %>
    </div>
    <div class="text-xs text-gray-500 mt-2">
      Chart is bucketed/downsampled for performance.
    </div>
  </div>
</div>
