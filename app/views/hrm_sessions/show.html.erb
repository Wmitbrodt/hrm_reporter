<div class="max-w-5xl mx-auto p-6 space-y-6">
  <h1 class="text-2xl font-bold">
    Session #<%= @session.external_id %>
  </h1>

  <div class="rounded-lg border p-4 grid grid-cols-2 gap-4">
    <div>
      <div class="text-sm text-gray-500">User</div>
      <div class="font-medium"><%= @session.user.username %></div>
    </div>

    <div>
      <div class="text-sm text-gray-500">Created</div>
      <div class="font-medium"><%= @session.imported_created_at %></div>
    </div>

    <div>
      <div class="text-sm text-gray-500">Min BPM</div>
      <div class="font-medium"><%= @session.min_bpm %></div>
    </div>

    <div>
      <div class="text-sm text-gray-500">Max BPM</div>
      <div class="font-medium"><%= @session.max_bpm %></div>
    </div>

    <div>
      <div class="text-sm text-gray-500">Avg BPM</div>
      <div class="font-medium"><%= number_with_precision(@session.avg_bpm, precision: 2) %></div>
    </div>
  </div>

  <div class="rounded-lg border p-4">
    <h2 class="font-semibold mb-2">Heart Rate Over Time</h2>
    <%= line_chart @session.chart_points, height: "300px" %>
    <div class="text-xs text-gray-500 mt-2">
      Chart is bucketed/downsampled for performance.
    </div>
  </div>
</div>
