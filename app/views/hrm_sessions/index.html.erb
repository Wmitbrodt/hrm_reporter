<div class="max-w-7xl mx-auto px-6 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">HRM Sessions</h1>
    <%= link_to "Dashboard", root_path, class: "text-sm text-indigo-600 hover:underline" %>
  </div>

  <div class="overflow-hidden rounded-lg border border-gray-200 bg-white">
    <table class="min-w-full divide-y divide-gray-200 text-sm">
      <thead class="bg-gray-50 text-left text-xs font-medium uppercase tracking-wide text-gray-500">
        <tr>
          <th class="px-4 py-3">Session</th>
          <th class="px-4 py-3">User</th>
          <th class="px-4 py-3">Created</th>
          <th class="px-4 py-3">Min / Max / Avg</th>
          <th class="px-4 py-3">Zones (secs)</th>
        </tr>
      </thead>

      <tbody class="divide-y divide-gray-100">
        <% @sessions.each do |s| %>
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-3 font-medium">
              <%= link_to "##{s.external_id}", hrm_session_path(s), class: "text-indigo-600 hover:underline" %>
            </td>
            <td class="px-4 py-3"><%= s.user.username %></td>
            <td class="px-4 py-3"><%= s.imported_created_at ? l(s.imported_created_at, format: :short) : "-" %></td>
            <td class="px-4 py-3">
              <%= s.min_bpm %> / <%= s.max_bpm %> /
              <%= number_with_precision(s.avg_bpm, precision: 2) %>
            </td>
            <td class="px-4 py-3 text-xs text-gray-600">
              Z1 <%= s.zone1_secs %> ·
              Z2 <%= s.zone2_secs %> ·
              Z3 <%= s.zone3_secs %> ·
              Z4 <%= s.zone4_secs %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-6 flex justify-center">
    <%= paginate @sessions %>
  </div>
</div>
